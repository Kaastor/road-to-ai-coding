@{
    ViewData["Title"] = "Welcome";
}

<div class="username-container">
    <div class="username-form">
        <h1>Welcome to ChatApp!</h1>
        <p>Please enter your username to start chatting:</p>
        
        <form method="get" action="@Url.Action("Chat", "Home")" id="usernameForm">
            <div class="form-group">
                <input type="text" name="username" id="username" class="form-control" 
                       placeholder="Enter your username" required maxlength="50" />
            </div>
            <button type="submit" class="btn btn-primary">Start Chatting</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('usernameForm').addEventListener('submit', function(e) {
            const username = document.getElementById('username').value.trim();
            if (!username) {
                e.preventDefault();
                alert('Please enter a username');
                return false;
            }
        });
        
        // Focus on username input when page loads
        document.getElementById('username').focus();
    </script>
}