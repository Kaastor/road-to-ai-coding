{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run helloworld (module)",
      "type": "debugpy",
      "request": "launch",
      "module": "helloworld",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "pytest: all",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "pytest: current file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "${file}"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
